[flake8]
# Maximum line length
max-line-length = 120

# Directories to exclude
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E402: module level import not at top of file
    E402

# Select specific error codes to check
select =
    # Errors
    E,
    # Warnings  
    W,
    # pyflakes errors
    F,
    # McCabe complexity
    C90

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Count errors
count = True

# Statistics
statistics = True

FROM debian:bullseye-slim

# Avoid prompts from apt
ENV DEBIAN_FRONTEND=noninteractive

# Update and install basic tools
RUN apt-get update && apt-get install -y \
    sudo \
    curl \
    git \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root test user
RUN useradd -m -s /bin/bash tester && \
    echo "tester ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create /etc/os-release if not exists (should exist in debian)
# The script checks for /etc/os-release

WORKDIR /home/tester/knx_to_openhab
COPY . .
RUN chown -R tester:tester /home/tester/knx_to_openhab

USER tester


# Arguments for the installer (can be passed via --build-arg)
ARG USER_ARG=tester
ARG REPO_URL_ARG=/home/tester/knx_to_openhab
ARG BRANCH_ARG=main

# Set environment variables for the installer
ENV USER=${USER_ARG}
ENV REPO_URL=${REPO_URL_ARG}
ENV BRANCH=${BRANCH_ARG}

# Run the installer
# This tests the local changes to install.sh and setup.sh
CMD ["/bin/bash", "-c", "chmod +x install.sh && ./install.sh"]
